#!/bin/sh
basedir=`dirname "$0"`

case `uname` in
    *CYGWIN*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  "$basedir/node"  "$basedir/node_modules/ripple-emulator/bin/ripple" "$@"
  ret=$?
else 
  node  "$basedir/node_modules/ripple-emulator/bin/ripple" "$@"
  ret=$?
fi
exit $ret
