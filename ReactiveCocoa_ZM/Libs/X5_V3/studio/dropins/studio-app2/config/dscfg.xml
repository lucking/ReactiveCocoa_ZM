<?xml version="1.0" encoding="UTF-8"?>
<config>
	<fields>
		<field name="dsName" text="数据源名称" />
		<field name="dsType" text="数据源类型" />
		<field name="dbType" text="数据库类型" />
		<field name="driver" text="驱动类名" />
		<field name="ip" text="服务器IP" />
		<field name="dbName" text="数据库名称" />
		<field name="port" text="端口号" />
		<field name="user" text="用户名" />
		<field name="password" text="密码" />
		<field name="instance1" text="实例名称" />
		<field name="instance2" text="实例名称" />
		<field name="sid" text="实例标识" />
	</fields>
	<url-emplate>
		<template name="MSSQL"
			url="{dsType}://{ip}{/instance1}:{port}/{{;dbPrefix}=}{dbName}{;instance={instance2}}" />
		<template name="ORACLE" url="{dsType}:@{ip}:{port}:{sid}" />
		<template name="SYBASE" url="{dsType}://{ip}:{port}/{dbName}"/>
		<template name="DB2" url="{dsType}://{ip}:{port}/{dbName}"/>
		<template name="MYSQL" url="{dsType}://{ip}:{port}/{dbName}"/>
		
	</url-emplate>
	<datasource-template>
	 	<datasource dsName="" dsType="jdbc:oracle:thin" displayName="Oracle(thin)" dbType="oracle10/former" 
			driver="oracle.jdbc.driver.OracleDriver" ip="" port="1521" user=""
			password="" templateRef="ORACLE" sid="" />
		<datasource dsName="" dsType="jdbc:oracle:oci" displayName="Oracle(oci)" dbType="oracle10" 
			driver="oracle.jdbc.driver.OracleDriver" user="" password=""
			templateRef="ORACLE" sid="" />
		<datasource dsName="" dsType="jdbc:jtds:sqlserver" displayName="SQLServer" dbType="sqlserver" 
			driver="net.sourceforge.jtds.jdbc.Driver" ip="" dbName="" port="1433"
			user="" password="" templateRef="MSSQL" instance2="" />
		<datasource dsName="" dsType="jdbc:jtds:sybase" displayName="Sybase" dbType="sybase"  driver="net.sourceforge.jtds.jdbc.Driver" ip="" dbName="" port="5000" user="" password="" templateRef="SYBASE"/> 	
		<datasource dsName="" dsType="jdbc:db2" displayName="DB2" dbType="db2" driver="com.ibm.db2.jcc.DB2Driver" ip="" dbName="" port="50000" user="" password="" templateRef="DB2"/>
		<datasource dsName="" dsType="jdbc:mysql" displayName="MySQL" dbType="mysql" driver="com.mysql.jdbc.Driver" ip="" dbName="" port="3306" user="" password="" templateRef="MYSQL"/> 
	</datasource-template>
	<datasource-instance>
	    <datasource dsName="system" dsType="jdbc:mysql" displayName="MySQL" dbType="mysql" driver="com.mysql.jdbc.Driver" ip="127.0.0.1" dbName="x5sys" port="3306" user="root" password="eDU=" templateRef="MYSQL"/>
    	<datasource dsName="demo" dsType="jdbc:mysql" displayName="MySQL" dbType="mysql" driver="com.mysql.jdbc.Driver" ip="127.0.0.1" dbName="x5demo" port="3306" user="root" password="eDU=" templateRef="MYSQL"/>
    	<datasource dsName="doc" dsType="jdbc:mysql" displayName="MySQL" dbType="mysql" driver="com.mysql.jdbc.Driver" ip="127.0.0.1" dbName="x5doc" port="3306" user="root" password="eDU=" templateRef="MYSQL"/>
	</datasource-instance>
	<doc-datasource-instance>
		    <datasource dsName="doc" dsType="jdbc:mysql" displayName="MySQL" dbType="mysql" driver="com.mysql.jdbc.Driver" ip="127.0.0.1" dbName="x5doc" port="3306" user="root" password="eDU=" templateRef="MYSQL"/>
	</doc-datasource-instance>
</config>