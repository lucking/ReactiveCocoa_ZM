			<property name="xid" text="编号" required="true" />        
		</properties>

		<events>
			<event name="onActive" text="页面激活" parameters="event"/>
			<event name="onInactive" text="页面离开" parameters="event"/>
			<event name="onModelConstruct" text="数据模型创建时" parameters="event"/>
			<event name="onModelConstructDone" text="数据模型创建完成" parameters="event"/>
			<event name="onLoad" text="页面初始化完成" parameters="event"/>
			<event name="onunLoad" text="页面关闭时" parameters="event"/>
		</events>
		<toolbar>	
<!-- 		   <item text="添加业务数据(BizData)" method="addBizData"/>		 -->
<!-- 		   <item text="添加通用数据(data)" method="addData"/> -->
		   <item text="隐藏" method="hide"/>
		   <item text="显示" method="show"/>			
		</toolbar>
 
		<templates>
		   <template name="default"><![CDATA[ 
		     <div component="$UI/system/components/justep/model/model"></div>
		   ]]></template>
		</templates>
		
		<events>
		</events>			
	</element>
