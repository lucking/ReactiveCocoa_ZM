<?xml version="1.0" encoding="UTF-8"?>
<elements>
	<element name="$UI/system/components/justep/model/model" tag-name="div" position="absolute" icon="model.gif" text="数据模型" display-property="xid"
			 parent-range="$UI/system/components/justep/window/window"  binding-component="$UI/system/components/justep/model/model"
			 component-type="model" validator="DataValidator" design-view="web-designer" >
