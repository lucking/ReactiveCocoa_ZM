<?xml version="1.0" encoding="utf-8"?>

<elements> 
  <element name="$UI/system/components/bootstrap/form/form" tag-name="div" icon="form.png" text="表单布局"
    display-property="id" component-type="layout-container"  binding-component="$UI/system/components/bootstrap/form/form"
    design-view="web-designer" > 
    <properties> 
      <property name="id" text="编号" required="false"/>
      <property name="style" text="样式" editor-ref="styleDialog" use-default="true"/> 
	  <property name="class"  text="class" editor-ref="classSelector">
		<editor-parameter><![CDATA[
		{
			"5kind": {
				label: "基础",
				value: "form-horizontal|form-vertical|form-inline|form-search",
				require: true
			}
		}
		]]></editor-parameter>
	 </property>
      <property name="layout-data" text="布局数据" path="layout-content/text()"/> 
    </properties>
    <property-editors/>  
    <events/>  
    <templates> 
      <template name="default"><![CDATA[ 
		       <div class="form-horizontal" component="$UI/system/components/bootstrap/form/form" > 
 					
      			</div>
		   ]]></template>
    </templates>
     <toolbar>
	    <item text="添加formGroup" method="addFormGroup" />
	</toolbar>
  </element>
  
  <element name="$UI/system/components/bootstrap/form/form#formGroup" tag-name="div" icon="row.png" text="表单组"
    display-property="id" component-type="layout-container"  discriminate-condition="hasClass('form-group')" resizable="false" 
    design-view="web-designer" > 
    <properties> 
      <property name="id" text="编号" required="false"/>
      <property name="style" text="样式" editor-ref="styleDialog" use-default="true"/> 
	  <property name="class"  text="class" editor-ref="classSelector">
		<editor-parameter><![CDATA[
		{
			"5kind": {
				label: "基础",
				value: "form-group",
				require: true
			}
		}
		]]></editor-parameter>
	 </property>
    </properties>
    <property-editors/>  
    <events/>  
    <templates> 
      <template name="default"><![CDATA[ 
		       <div class="form-group"><div class="col-sm-2"></div><div class="col-sm-4"></div><div class="col-sm-2"></div><div class="col-sm-4"></div></div>
		   ]]>
      </template>
    </templates>
     <toolbar>
			<item text="添加列" method="addCol" />
	</toolbar>
  </element>
  
  <element name="$UI/system/components/bootstrap/form/form#col" tag-name="div" icon="col.png" text="布局列"
    display-property="id" component-type="layout-container"  discriminate-condition="executeXpath(contains(parent::node()/@class, 'form-group'))" resizable="false" canMove="false"  owner="$UI/system/components/bootstrap/form/form#formGroup"
    design-view="web-designer"> 
    <properties> 
      <property name="id" text="编号" required="false"/>
      <property name="style" text="样式"  editor-ref="styleDialog" use-default="true"/> 
	  <property name="class"  text="class" editor-ref="classSelector">
		<editor-parameter><![CDATA[
		{
			"5kind": {
				label: "基础",
				value: "col-sm-1|col-sm-2|col-sm-3|col-sm-4|col-sm-5|col-sm-6|col-sm-7|col-sm-8|col-sm-9|col-sm-10|col-sm-11|col-sm-12",
				require: true
			}
		}
		]]></editor-parameter>
	 </property>
    </properties>
    <property-editors/>  
    <events/>  
    <templates> 
      <template name="default"><![CDATA[ 
		       <div class="col-sm-1"></div>
		   ]]></template>
    </templates>
     <toolbar>
		<item text="添加formGroup" method="addFormGroup" />
		<item text="添加controlLabel" method="addControlLabel" />
	</toolbar>
  </element>
</elements>  
